<Page x:Class="RequestsCourse.Pages.ListClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RequestsCourse.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="ListClientsPage">

    <Border Background="#ffffff">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <StackPanel Width="500"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Margin="10 0 0 0" Foreground="#000000" Text="Поиск по фамилии" FontSize="12"
                                   Padding="5 5"/>
                        <TextBox Margin="5 0 5 0" x:Name="TxtSearch" TextChanged="TxtSearch_TextChanged"
                                 Width="300" FontSize="12" Padding="5 5"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <DataGrid Name="DtgClients" IsReadOnly="True"
                              Margin="3" CanUserSortColumns="True"
                              AutoGenerateColumns="False" CanUserReorderColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Фамилия клиента" Width="*" Binding="{Binding FirstName}"/>
                            <DataGridTextColumn Header="Имя клиента" Width="*" Binding="{Binding LastName}"/>
                            <DataGridTextColumn Header="Почта клиента" Width="*" Binding="{Binding Email}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center">
                    <Button x:Name="ResetFilters" Content="Сбросить фильтры" Height="25" FontSize="14"
                            Margin="10" Foreground="#5a5a5a" Click="ResetFilters_Click"
                            Width="200"/>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Диапазон дат создания заявок"/>
                        <DatePicker x:Name="StartDate" Height="25" FontSize="14" Margin="5"
                                    Foreground="#5a5a5a" Width="200"
                                    SelectedDateFormat="Short" ToolTip="Дата начала"/>
                        <DatePicker x:Name="EndDate" Height="25" FontSize="14" Margin="5"
                                    Foreground="#5a5a5a" Width="200"
                                    SelectedDateFormat="Short" ToolTip="Дата конца"/>
                        <Button Content="Применить" x:Name="Apply" Height="25" FontSize="14"
                                Margin="5" Foreground="#5a5a5a" Width="200"
                                Click="Apply_Click"/>
                        <Button x:Name="AddClient" Content="Добавить клиента" Height="25"
                            FontSize="14"
                            Width="200" Margin="10" Foreground="#5a5a5a" Click="AddClient_Click"/>
                        <Button x:Name="DelClient" Content="Удалить клиента" Height="25" 
                            Width="200" FontSize="14"
                            Margin="10" Foreground="#5a5a5a" Click="DelClient_Click"/>
                        <Button x:Name="EditClient" Content="Редактировать клиента" Height="25"
                            Width="200" Margin="10" Foreground="#5a5a5a" Click="EditClient_Click"
                            FontSize="14"/>
                        <Button Content="Список заявок" Height="25" FontSize="14"
                            Width="200" Margin="10 10 10 10" Foreground="#5a5a5a"
                            x:Name="BtnListRequests" Click="BtnListRequests_Click"/>
                        <Button Content="Отчет по клиентам" Height="25" FontSize="14"
                            Width="200" Margin="10" Foreground="#5a5a5a"
                            x:Name="BtnStaticClient" Click="BtnStaticClient_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
