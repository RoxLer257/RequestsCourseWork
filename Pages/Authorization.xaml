<Page x:Class="RequestsCourse.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RequestsCourse.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="Authorization">

    <Grid>
        <Border Width="400" VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#FFFFFF" BorderThickness="2" CornerRadius="10" Padding="30"
                Background="#FFFFFF">
            <StackPanel>
                <TextBlock Foreground="#5a5a5a" FontWeight="SemiBold" FontSize="20"
                           Margin="0 0 0 10" Text="Авторизация" HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Vertical" Margin="5 0 0 5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Логин:" Margin="0 0 14 5" VerticalAlignment="Center" 
                                   FontSize="14"
                                   Foreground="#5a5a5a"/>
                        <TextBox x:Name="TxtLogin" Margin="0 0 5 5" Width="250"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Пароль:" Margin="0 0 5 0" 
                                   FontSize="14"
                                   VerticalAlignment="Center" Foreground="#5a5a5a"/>
                        <PasswordBox x:Name="TxtPassword" Width="250"/>
                    </StackPanel>
                    <StackPanel Margin="0 10 0 10">
                        <Button Content="Войти" Margin="0 0 5 0" x:Name="BtnEnter"
                                Click="BtnEnter_Click" Width="250"
                                Foreground="#5a5a5a" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
